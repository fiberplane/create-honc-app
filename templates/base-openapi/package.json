    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.0",
    "hono-openapi": "^0.4.6",
    "zod": "^3.23.8",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250508.0",
    "drizzle-kit": "^0.30.4",
    "drizzle-seed": "^0.3.1",
    "tsx": "^4.19.2",
